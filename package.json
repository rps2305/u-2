{
  "name": "u-2-spyplane-website",
  "version": "1.0.0",
  "type": "module",
  "description": "Informational website about U-2 spyplane with responsive design and image gallery",
  "main": "src/index.html",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "playwright test",
    "test:lint": "htmlhint src/**/*.html && prettier --check src/",
    "build": "npx tailwindcss -i ./src/css/styles.css -o ./public/styles.css",
    "build:watch": "npx tailwindcss -i ./src/css/styles.css -o ./public/styles.css --watch",
    "img:convert": "node scripts/convert-to-webp.js",
    "img:audit": "node scripts/audit-alt-text.js",
    "img:dimensions": "node scripts/extract-dimensions.js",
    "img:validate": "node scripts/validate-optimization.js"
  },
  "keywords": [
    "u-2",
    "spyplane",
    "aviation",
    "history"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/jest": "^29.5.14",
    "autoprefixer": "^10.4.23",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "glob": "^10.5.0",
    "htmlhint": "^1.8.0",
    "jest": "^29.7.0",
    "minimist": "^1.2.8",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.19"
  }
}

{
  "name": "lockhead-u2-website",
  "version": "1.0.0",
  "description": "Static responsive HTML website for Lockhead U-2 aircraft",
  "main": "src/index.html",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/css/input.css -o ./src/css/output.css --watch",
    "build": "npx tailwindcss -i ./src/css/input.css -o ./src/css/output.css --minify",
    "serve": "npx serve .",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report",
    "optimize-images": "node scripts/optimize-images.js"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "lightbox2": "^2.11.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.4.0",
    "playwright": "^1.40.0",
    "serve": "^14.2.0"
  },
  "keywords": ["static", "website", "tailwindcss", "responsive", "aircraft"],
  "author": "Ronald Punt",
  "license": "MIT"
}